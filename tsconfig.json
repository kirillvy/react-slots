{
  "compilerOptions": {
    "outDir": "./lib",
    "target": "es5",
    "module": "commonjs",
    "lib": [ "es5", "dom" ],
    "noImplicitAny": true,
    "strictNullChecks": true,
    "removeComments": false,
    "declaration": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "jsx": "react",
    "typeRoots": [
      "index.d.ts",
      "node_modules/@types"
    ]
  },
  "include": [
    "./src/**/*.tsx",
    "./src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "./src/**/*.spec.tsx",
    "./src/**/*.test.tsx",
    "./src/**/*.stories.tsx",
  ]
}